<% layout("/layouts/boilerplate") %>
<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
    .filter{
        text-align: center;
        margin-right: 2rem;
        margin-top: 2rem;
        opacity: 0.6;
    }
    .filter:hover{
        opacity: 1;
        text-decoration: underline;
        cursor: pointer;
    }
    i{
        font-size: 1.3rem;
    }
    .filter p {
        font-size: 0.8rem;
    }
    .tax-info{
        display: none;
        font-size: 0.9rem;
        color: #dc3545;
    }
    .tax-toggle {
        border: 1px solid rgb(119, 117, 117);
        border-radius: 1rem;
        height: 3.5rem;
        padding: 1rem;
    }
</style>
<div id="filters">
    <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-chess-rook"></i></div>
        <p>Castles</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-city"></i></div>
        <p>Top cities</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-place-of-worship"></i></div>
        <p>Mansions</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-place-of-worship"></i></div>
        <p>Mansions</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Maountain</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
    </div>
    <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault">Display total after Taxes</label>
          </div>
    </div>
</div>
<br>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-col-1 mt-3">
    <% for (let listing of allListings) {%>
        <div class="card listings-card">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing Image" style="height: 20rem;">
            <div class="card-body">
                <p class="card-text">
                    <b><%= listing.title %></b>
                    <br>
                    &#8360; <%= listing.price.toLocaleString("en-PK") %> /night &nbsp; &nbsp; <i class="tax-info"><b>+20% GST</b></i>
                    <br>
                    <%= listing.location %>
                </p>
                <a href="/listings/<%= listing._id %>" class="btn btn-outline-danger">See Details</a>
            </div>
        </div>
    <% } %>
</div>

<script>
    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click", () => {
        let taxInfo = document.getElementsByClassName("tax-info");
        for(info of taxInfo) {
            if(info.style.display != "inline") {
                info.style.display = "inline";
            } else{
                info.style.display = "none";
            }
        }
    });
</script>