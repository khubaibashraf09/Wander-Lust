<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-sm-6 offset-sm-3">
        <h1 class="mb-3">Login on WanderLust</h1>
        <form action="/login" method="post" class="needs-validation" novalidate>
            <div class="mb-2">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" id="username" class="form-control" placeholder="Enter a username" required>
            </div>
            <div class="mb-2">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" id="password" class="form-control" placeholder="Enter a password" required>
            </div>
            <p>Don't have an account! <b><a href="/signup">SignUp</a></b></p>
            <button class="btn mt-2 btn-outline-danger col-12 col-sm-6 offset-sm-3">Login</button>
        </form>
    </div>
</div>